<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="me.zhangjh.wx.program.mapper.TblOrderMapper">

    <insert id="insertTblOrder"  useGeneratedKeys="true" keyProperty="id">
        INSERT INTO `tbl_order`
        (
        <trim suffixOverrides=",">
            <if test="userId!=null">
                `user_id`,
            </if>
            <if test="orderId!=null">
                `order_id`,
            </if>
            <if test="itemId!=null">
                `item_id`,
            </if>
            <if test="payStatus!=null">
                `pay_status`,
            </if>
            <if test="amount!=null">
                `amount`,
            </if>
        </trim>
        )
        VALUES
        (
        <trim suffixOverrides=",">
            <if test="userId!=null">
                #{userId},
            </if>
            <if test="orderId!=null">
                #{orderId},
            </if>
            <if test="itemId!=null">
                #{itemId},
            </if>
            <if test="payStatus!=null">
                #{payStatus},
            </if>
            <if test="amount!=null">
                #{amount},
            </if>
        </trim>
        )
    </insert>

    <update id="updateTblOrder">
        UPDATE `tbl_order`
        SET
        <trim suffixOverrides=",">
            <if test="isDeleted != null">
                `is_deleted` = #{isDeleted},
            </if>
            <if test="payStatus != null">
                `pay_status` = #{payStatus},
            </if>
        </trim>
        WHERE `id` = #{id}
    </update>

    <resultMap type="me.zhangjh.wx.program.model.TblOrder" id="TblOrderMap">
        <result property="id" column="id"/>
        <result property="createTime" column="create_time"/>
        <result property="modifyTime" column="modify_time"/>
        <result property="isDeleted" column="is_deleted"/>
        <result property="userId" column="user_id"/>
        <result property="orderId" column="order_id"/>
        <result property="itemId" column="item_id"/>
        <result property="payStatus" column="pay_status" />
        <result property="amount" column="amount" />
    </resultMap>

    <select id="queryTblOrder" resultMap="TblOrderMap">
        select * from  `tbl_order`
        <trim prefix="where" suffixOverrides="and | or">
            <if test="id != null">
                `id` = #{id} and
            </if>
            <if test="userId != null and userId!=''">
                `user_id` = #{userId} and
            </if>
            <if test="orderId != null and orderId!=''">
                `order_id` = #{orderId} and
            </if>
            <if test="itemId != null">
                `item_id` = #{itemId} and
            </if>
            <if test="payStatus != null">
                `pay_status` = #{payStatus} and
            </if>
        </trim>
        where is_deleted = 0;
    </select>

</mapper>