<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="me.zhangjh.wx.program.mapper.pinyin.TblWordsMapper">

    <insert id="insertTblWords" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO `tbl_words`
        (
        <trim suffixOverrides=",">
            <if test="name!=null">
                `name`,
            </if>
            <if test="userId!=null">
                `user_id`,
            </if>
        </trim>
        )
        VALUES
        (
        <trim suffixOverrides=",">
            <if test="name!=null">
                #{name},
            </if>
            <if test="userId!=null">
                #{userId},
            </if>
        </trim>
        )
    </insert>

    <insert id="batchInsertTblWords" useGeneratedKeys="true" keyProperty="id" parameterType="java.util.List">
        INSERT INTO `tbl_words` (name, user_id)
        VALUES
        <foreach collection="list" item="words" separator=",">
        (
            #{words.name}, #{words.userId}
        )
        </foreach>
    </insert>

    <update id="update">
        UPDATE `tbl_words`
        SET
        <trim suffixOverrides=",">
            <if test="isDeleted != null">
                `is_deleted` = #{isDeleted},
            </if>
            <if test="name != null and name!=''">
                `name` = #{name},
            </if>
        </trim>
        WHERE `id` = #{id}
    </update>

    <resultMap type="me.zhangjh.wx.program.model.pinyin.TblWords" id="TblWordsMap">
        <result property="id" column="id"/>
        <result property="createTime" column="create_time"/>
        <result property="modifyTime" column="modify_time"/>
        <result property="isDeleted" column="is_deleted"/>
        <result property="name" column="name"/>
        <result property="userId" column="user_id"/>
    </resultMap>

    <select id="query" resultMap="TblWordsMap">
        select *
        from  `tbl_words`
        <trim prefix="where" suffixOverrides="and | or">
            is_deleted = 0 and
            <if test="id != null">
                `id` = #{id} and
            </if>
            <if test="name != null and name!=''">
                `name` = #{name} and
            </if>
            <if test="userId != null and userId!=''">
                `user_id` = #{userId} and
            </if>
        </trim>
    </select>

    <select id="queryByUserId" resultMap="TblWordsMap">
        select * from tbl_words
        where is_deleted = 0 and user_id = #{userId}
    </select>

</mapper>