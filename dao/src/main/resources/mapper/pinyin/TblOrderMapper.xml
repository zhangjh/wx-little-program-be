<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="me.zhangjh.wx.program.mapper.pinyin.TblOrderMapper">

    <insert id="insertTblOrder"  useGeneratedKeys="true" keyProperty="id">
        INSERT INTO `tbl_order`
        (
        <trim suffixOverrides=",">
            <if test="userId!=null">
                `user_id`,
            </if>
            <if test="orderId!=null">
                `order_id`,
            </if>
        </trim>
        )
        VALUES
        (
        <trim suffixOverrides=",">
            <if test="userId!=null">
                #{userId},
            </if>
            <if test="orderId!=null">
                #{orderId},
            </if>
        </trim>
        )
    </insert>

    <update id="update">
        UPDATE `tbl_order`
        SET
        <trim suffixOverrides=",">
            <if test="isDeleted != null">
                `is_deleted` = #{isDeleted},
            </if>
            <if test="userId != null and userId!=''">
                `user_id` = #{userId},
            </if>
            <if test="orderId != null and orderId!=''">
                `order_id` = #{orderId},
            </if>
        </trim>
        WHERE `id` = #{id}
    </update>

    <resultMap type="me.zhangjh.wx.program.model.pinyin.TblOrder" id="TblOrderMap">
        <result property="id" column="id"/>
        <result property="createTime" column="create_time"/>
        <result property="modifyTime" column="modify_time"/>
        <result property="isDeleted" column="is_deleted"/>
        <result property="userId" column="user_id"/>
        <result property="orderId" column="order_id"/>
    </resultMap>

    <select id="query" resultMap="TblOrderMap">
        select *
        from  `tbl_order`
        <trim prefix="where" suffixOverrides="and | or">
            is_deleted = 0 and
            <if test="id != null">
                `id` = #{id} and
            </if>
            <if test="userId != null and userId!=''">
                `user_id` = #{userId} and
            </if>
            <if test="orderId != null and orderId!=''">
                `order_id` = #{orderId} and
            </if>
        </trim>
    </select>

</mapper>